<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Project Wolfi{% endblock %}</title>
    <link href="{{ asset('content/css/material-design/material.min.css') }}" rel="stylesheet">
    <link href="{{ asset('content/css/material-design/material-font.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
    <link href="{{ asset('content/css/api/styles.css') }}" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
    <link href="{{ asset('favicon.ico') }}" rel="icon" type="image/x-icon"/>
    <script src="{{ asset('content/js/jquery-2.1.4.min.js') }}"></script>
  </head>
  <body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
      {% include("::shared/_header.html.twig") %}
      <main class="mdl-layout__content wi-wrapper">
        <div class="mdl-grid">
          <div class="mdl-cell mdl-cell--12-col">            
            {% block body %}{% endblock %}
          </div>
        </div>

        {% include("::shared/_footer.html.twig") %}
      </main>

    </div>
    <script src="{{ asset('content/js/material-design/material.min.js') }}"></script>
    <script src="{{ asset('content/js/main.js') }}"></script>
    {% block javascripts %}{% endblock %}
  </body>
</html>
