{% trans_default_domain 'FOSUserBundle' %}
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--3-col"></div>
  <div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--6-col mdl-cell--12-col-tablet mdl-cell--12-col-phone">
    <div class="mdl-card__title">
      <i class="material-icons md-36">account_circle</i>&nbsp;
      <h2 class="mdl-card__title-text">
        {{ 'layout.register'|trans }}
      </h2>
    </div>
    {{ form_start(form) }}
    <div class="mdl-card__supporting-text">
      {{ form_errors(form) }}
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label width-100">
        {{ form_widget(form.email, {'attr': {'class': 'mdl-textfield__input'}}) }}
        {{ form_label(form.email, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label width-100">
        {{ form_widget(form.username, {'attr': {'class': 'mdl-textfield__input'}}) }}
        {{ form_label(form.username, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label width-100">
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'mdl-textfield__input'}}) }}
        {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label width-100">
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'mdl-textfield__input'}}) }}
        {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'mdl-textfield__label'}}) }}
      </div>
    </div>
    <div class="mdl-card__actions mdl-card--border text-right">
      <input class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent" id="_submit" name="_submit" type="submit" value="{{ 'registration.submit'|trans }}"/>
    </div>
    {{ form_end(form) }}
  </div>
</div>
